@model TicketManagement.Dto.EventDto

<img class="esh-event-thumbnail" src="@Model.ImageUrl" />

<div class="esh-event-name">
    <span>@Model.Name</span>
</div>

<div class="esh-event-description">
    <span>@Model.Description</span>
</div>

<div class="esh-event-duration">
    <span>@Model.StartDateTime</span>
    <span>@Model.EndDateTime</span>
</div>

<div class="esh-event-available-seats">
    <span>@Model.AvailableSeats</span>
</div>

<div class="esh-event-price">
    <span>@Model.PriceFrom.ToString("N2")</span>
    <span>@Model.PriceTo.ToString("N2")</span>
</div>

<form asp-controller="EventArea" asp-action="GetViewEventArea" class="esh-catalog-button @((!User.Identity.IsAuthenticated) ? "is-disabled" : "")" data-tooltip="Для перехода на эту страницу нужно авторизироваться" >
    <input class="esh-catalog-button @((!User.Identity.IsAuthenticated) ? "is-disabled" : "")" type="submit" value="Choose tickets" />
    <input type="hidden" asp-for="@Model.Id" name="id" />
</form>