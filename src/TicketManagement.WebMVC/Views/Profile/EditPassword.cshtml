@model TicketManagement.WebMVC.ViewModels.ProfileViewModels.ProfileChangePasswordViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<h2>Изменение пароля для пользователя @Model.Email</h2>
<form asp-action="EditPassword" asp-controller="Profile">
    <div asp-validation-summary="All" class="text-danger"></div>

    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    <div class="form-group">
        <label asp-for="OldPassword"></label><br />
        <input asp-for="OldPassword" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword"></label><br />
        <input asp-for="NewPassword" />
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["Apply"]" class="btn btn-default" />
    </div>
</form>