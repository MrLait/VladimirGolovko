@model TicketManagement.WebMVC.ViewModels.ProfileViewModels.ProfileViewModel
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="EditSurname" asp-controller="Profile">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Surname</label>
        <input type="text" asp-for="Surname" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Apply" class="btn btn-outline-secondary" />
    </div>
</form>