@model TicketManagement.WebMVC.ViewModels.ProfileViewModels.ProfileViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<form asp-action="EditSurname" asp-controller="Profile">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Surname"></label><br />
        <input asp-for="Surname" />
    </div>
    <div class="form-group">
        <input type="submit" value="@Localizer["Apply"]" class="btn btn-outline-secondary" />
    </div>
</form>