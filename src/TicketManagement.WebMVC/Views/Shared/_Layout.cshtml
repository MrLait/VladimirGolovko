@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TicketManagement.WebMVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/EventHomePage/eventHomePage.css" />
    <link rel="stylesheet" href="~/css/EventArea/EventArea.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="EventHomePage" asp-action="Index">TicketManagement.WebMVC</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="EventHomePage" asp-action="Index">@Localizer["Home"]</a>
                        </li>
                    </ul>
                </div>
            </div>
            <div class="container">
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if (User.Identity.IsAuthenticated)
                        {
                            @if (User.IsInRole("eventManager"))
                            {
                                <li class="nav-link nav-item text-dark">
                                    <a class="esh-profile-status" asp-area="" asp-controller="EventManager" asp-action="Index">@Localizer["EventManagerArea"]</a>
                                </li>
                            }
                            <li class="nav-link nav-item text-dark">
                                <a class="esh-profile-status" asp-area="" asp-controller="Profile" asp-action="Index">@Localizer["Profile"]</a>
                            </li>
                            <li class="nav-link nav-item text-dark">
                                <a class="esh-basketstatus" asp-area="" asp-controller="Basket" asp-action="Index"> @Localizer["Basket"] </a>
                            </li>
                            <li class="nav-link nav-item text-dark">
                                <a class="esh-basketstatus" asp-area="" asp-controller="PurchaseHistory" asp-action="Index">@Localizer["PurchaseHistory"]</a>
                            </li>
                            <li class="nav-link nav-item text-dark">
                                @User.Claims.FirstOrDefault(x => x.Type == System.Security.Claims.ClaimTypes.Email).Value
                            </li>
                            <li class="nav-item">
                                <form class="nav-link text-dark" asp-area="" method="post" asp-controller="Account" asp-action="Logout">
                                    <input type="submit" value="@Localizer["Logout"]" />
                                </form>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Login">@Localizer["Login"]</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Account" asp-action="Register">@Localizer["Register"]</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>

            <div class="container">

            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/test.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
