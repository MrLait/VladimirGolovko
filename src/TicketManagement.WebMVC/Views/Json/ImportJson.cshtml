@model TicketManagement.WebMVC.ViewModels.EventViewModels.IndexViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
@{ ViewData["Title"] = "Events"; }

<form asp-controller="Json" asp-action="ImportJson" class="form-horizontal" enctype="multipart/form-data">
    <label>Upload a profile image:</label>
    <input type="File" name="file" id="file" value="Choose json file" class="form-control" />
    <input type="submit" class="btn btn-primary" value="Upload" />
</form>

<div class="container">
    @if (@Model != null)
    {
        @if (@Model.EventItems.Count() > 0)
        {
            <div class="esh-event-items row">
                @foreach (var eventItem in Model.EventItems)
                {
                    <div class="esh-event-item col-md-4">
                        <partial name="_product" model="eventItem" />
                    </div>
                }
            </div>
        }
    }
</div>